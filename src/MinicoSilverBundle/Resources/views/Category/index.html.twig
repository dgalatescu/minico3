    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <style>
        body {
        font-size: 62.5%;
        font-family: "Trebuchet MS", "Arial", "Helvetica", "Verdana", "sans-serif";
        background-color: #ffffff;
        border: 1px solid #dfdfdf;
        border-radius: 16px;
        margin-bottom: 20px;
        padding: 40px 50px;
        }


        .demo-description {
        clear: both;
        padding: 12px;
        font-size: 1.3em;
        line-height: 1.4em;
        }

        .ui-draggable, .ui-droppable {
        background-position: top;
        }

        /*table {*/
        /*font-size: 1.2em;*/
